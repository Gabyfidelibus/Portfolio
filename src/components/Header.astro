---
// Header component
---

<!-- Header Section -->
<header class="fixed w-full bg-white shadow-md z-10">
    <div class="container mx-auto px-6 py-3 flex justify-between items-center">
        <h1 class="text-2xl font-bold text-indigo-600">Mi Portfolio</h1>
        
        <nav class="hidden md:flex space-x-8">
            <a href="#about" class="text-gray-600 hover:text-indigo-600 transition duration-300">Conoceme</a>
            <a href="#skills" class="text-gray-600 hover:text-indigo-600 transition duration-300">Habilidades</a>
            <a href="#projects" class="text-gray-600 hover:text-indigo-600 transition duration-300">Proyectos</a>
            <a href="#contact" class="text-gray-600 hover:text-indigo-600 transition duration-300">Contacto</a>
        </nav>
        
        <button id="resume-btn" class="bg-indigo-600 text-white px-6 py-2 rounded hover:bg-indigo-700 transition duration-300">
            Obten mi CV
        </button>
        
        <!-- Mobile menu button -->
        <div class="md:hidden">
            <button id="menu-toggle" class="text-gray-500 hover:text-gray-800 focus:outline-none">
                <i class="fas fa-bars text-xl"></i>
            </button>
        </div>
    </div>
    
    <!-- Mobile menu -->
    <div id="mobile-menu" class="hidden md:hidden bg-white py-4 px-6">
        <a href="#about" class="block py-2 text-gray-600 hover:text-indigo-600">Conoceme</a>
        <a href="#skills" class="block py-2 text-gray-600 hover:text-indigo-600">Habilidades</a>
        <a href="#projects" class="block py-2 text-gray-600 hover:text-indigo-600">Proyectos</a>
        <a href="#contact" class="block py-2 text-gray-600 hover:text-indigo-600">Contacto</a>
    </div>
</header>